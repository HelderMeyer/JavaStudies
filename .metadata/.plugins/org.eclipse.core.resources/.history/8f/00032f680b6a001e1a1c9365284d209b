package roteiro1.parte2;

public class Exercicio01 {

	public static void main(String[] args) {
		double salarioBase = 2500;
		double horasExtras = 10;
		double salarioTotal = salarioBase + (salarioBase*(horasExtras/40));
		
		System.out.println("Salário base: " + salarioBase + " (40 horas)");
		System.out.println("Quantidade de horas extras: " + horasExtras);
		System.out.println("Salário Total: " + salarioTotal);
	}

}
